  {
    name: "Frontend Engineering",
    desc: "React, Astro, Vue, Tailwind",
    tag: "Expert",
    class: "skills-grid__item--wide theme-pink",
    pattern: "code",
  },
  {
    name: "TypeScript",
    desc: "Type-safe dev",
    tag: "Core",
    class: "theme-blue",
    pattern: "brackets",
  },
  {
    name: "Backend Systems",
    desc: "Node.js, Deno",
    tag: "Advanced",
    class: "theme-purple",
    pattern: "server",
  },
  {
    name: "Cloud Architecture",
    desc: "AWS, GCP, Azure, Serverless",
    tag: "Certified",
    class: "skills-grid__item--big theme-yellow",
    pattern: "cloud",
  },
  {
    name: "Database Design",
    desc: "SQL, NoSQL, Redis",
    tag: "Data",
    class: "skills-grid__item--wide theme-green",
    pattern: "db",
  },
  {
    name: "DevOps & CI/CD",
    desc: "Docker, K8s, Actions",
    tag: "Ops",
    class: "skills-grid__item--wide theme-cyan",
    pattern: "gear",
  },
  {
    name: "UI/UX Design",
    desc: "Figma, A11y",
    tag: "Design",
    class: "theme-dark",
    pattern: "pen",
  },
  {
    name: "Mobile Dev",
    desc: "React Native",
    tag: "Mobile",
    class: "theme-beige",
    pattern: "mobile",
  },
