};
---

<section class="skills-section">
  <h1 class="skills-section__title">Skills</h1>

  <ul class="skills-grid">
    {
      skills.map((skill) => (
        <li class={`skills-grid__item ${skill.class}`}>
          <div class="skill-bg-pattern">
            <svg
              viewBox="0 0 24 24"
              fill="none"
              xmlns="http://www.w3.org/2000/svg"
              set:html={patterns[skill.pattern]}
            />
          </div>
          <div>
            <div class="skill-name">{skill.name}</div>
            <div class="skill-desc">{skill.desc}</div>
          </div>
          <div class="skill-tag">{skill.tag}</div>
        </li>
      ))
    }
  </ul>
</section>
